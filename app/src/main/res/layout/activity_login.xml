<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    android:id="@+id/login_form"
   >



    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="193dp"
        android:paddingBottom="10dp"
        android:src="@drawable/telemartlogo"
        android:layout_alignTop="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <!-- Login progress -->


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/button_width"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text_round"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"

        android:singleLine="true"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/txt_reset_password"
        android:layout_alignEnd="@+id/txt_reset_password"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignEnd="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="28dp"
        android:background="@drawable/edit_text_round"
        android:hint="Password"
        android:imeActionId="@+id/login"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/txt_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:gravity="right"
        android:paddingTop="10dp"
        android:textSize="14dp"
        android:text="Forgot Password"
        android:textColor="@color/textColor"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/password"
        android:layout_toRightOf="@+id/txt_create_one"
        android:layout_toEndOf="@+id/txt_create_one" />


    <Button
        android:id="@+id/btn_sign_in"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/background_tint"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@+id/txt_reset_password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password"/>


    <TextView
        android:id="@+id/no_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an account?"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:fontFamily="cursive"
        android:textSize="22dp"
        android:layout_below="@+id/btn_sign_in"
        android:layout_alignRight="@+id/btn_sign_in"
        android:layout_alignEnd="@+id/btn_sign_in"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
       />

    <TextView
        android:id="@+id/txt_create_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create one"
        android:gravity="center"
        android:layout_below="@+id/no_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:textSize="22dp"
        android:fontFamily="cursive"
        android:textColor="@color/textColor"
        />


</RelativeLayout>
    </ScrollView>



